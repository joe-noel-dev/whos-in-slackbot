{
  "compilerOptions": {
    
    "target": "es2016",
    "lib": ["es6"],
    
    "module": "commonjs",
    "rootDir": "source",
    
    "resolveJsonModule": true,
    
    "allowJs": true,
    
    "outDir": "build",
  
    "esModuleInterop": true,
  
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,

    "skipLibCheck": true
  }
}
